{
    "name": "root",
    "packageManager": "yarn@3.2.0",
    "private": true,
    "workspaces": [
        "packages/*",
        "examples/*/*"
    ],
    "type": "module",
    "scripts": {
        "build": "node ./scripts/build.js && tsc --build",
        "format": "prettier --write .",
        "publish": "yarn build && yarn workspaces foreach run publish"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.16.7",
        "@chialab/esbuild-plugin-babel": "^0.15.14",
        "@types/node": "^16.11.26",
        "babel-preset-solid": "^1.3.13",
        "esbuild": "^0.14.34",
        "prettier": "^2.6.2",
        "typescript": "~4.6.3"
    },
    "prettier": {
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 4,
        "overrides": [
            {
                "files": [
                    "**/*.yaml",
                    "**/*.yml"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    }
}
